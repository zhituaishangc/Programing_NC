PROC S_LINESPEED_DRESS SAVE SBLOF DISPLOF
;砂轮速度

DEF REAL WHEEL_RPM;砂轮转速
DEF REAL DWHEEL_RPM;修整轮转速

IF DWHEEL_TOUCH_L>=DRESS_VER_INIT_L
    WHEEL_DIACURNT=WHEEL_DIA-(DWHEEL_TOUCH_L-DRESS_VER_INIT_L)*2
ELSE
    WHEEL_DIACURNT=WHEEL_DIA
ENDIF

WHEEL_RPM=WHEEL_LINESPEED_DRESS*60000/($PI*WHEEL_DIACURNT)
DWHEEL_RPM=DWHEEL_LINESPEED*60000/($PI*DWHEEL_DIA)

M1=3 S1=WHEEL_RPM
M2=3 S2=DWHEEL_RPM
WAITS(1,2)

RET
